{
  "name": "@file-services/overlay",
  "description": "an in-memory layered file-system that bridges between two file systems",
  "version": "0.1.0",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "build": "ts-build ./src --cjs --esm",
    "lint": "run-p lint:src lint:test",
    "lint:src": "tslint -p src",
    "lint:test": "tslint -p test",
    "test": "run-p test:node",
    "test:node": "mocha -r @ts-tools/node/r \"test/**/*.spec.ts?(x)\" --watch-extensions ts,tsx --colors",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@file-services/memory": "^0.4.10",
    "@file-services/types": "^0.4.10",
    "@file-services/utils": "^0.4.10"
  },
  "files": [
    "cjs",
    "esm",
    "src",
    "!src/tsconfig.json"
  ],
  "license": "MIT",
  "repository": "https://github.com/wixplosives/file-services/tree/master/packages/overlay",
  "homepage": "https://github.com/wixplosives/file-services",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
